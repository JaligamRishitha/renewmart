# RenewMart Environment Configuration
# Copy this file to .env and customize for your environment

# Public Host Configuration
PUBLIC_HOST=149.102.158.71

# Host Port Mappings (External ports on host machine)
FRONTEND_HOST_PORT=1312
BACKEND_HOST_PORT=1313
POSTGRES_HOST_PORT=1314
REDIS_HOST_PORT=1315
NGINX_HOST_PORT=1316

# Database Configuration
DATABASE_URL=postgresql://renewmart_user:renewmart_password@postgres_db:5432/renewmart_db
DATABASE_HOST=postgres_db
DATABASE_PORT=5432
DATABASE_NAME=renewmart_db
DATABASE_USER=renewmart_user
DATABASE_PASSWORD=renewmart_password

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=1313
DEBUG=true
RELOAD=true

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:1312", "http://149.102.158.71:1312", "http://frontend:1312"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/renewmart.log
ACCESS_LOG_FILE=logs/renewmart_access.log
ERROR_LOG_FILE=logs/renewmart_errors.log

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=[".pdf", ".doc", ".docx", ".jpg", ".jpeg", ".png"]

# Redis Configuration (Internal Docker network ports)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# Email Configuration
EMAIL_FROM=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAIL_USE_TLS=true
VERIFICATION_CODE_TTL=600

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:1313
VITE_API_URL=http://backend:1313/api
NODE_ENV=development
